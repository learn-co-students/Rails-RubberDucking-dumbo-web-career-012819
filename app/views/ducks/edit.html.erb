<h1><%= "Edit #{@duck.name}" %></h1>

<% if @duck.errors.any? %>
  <% @duck.errors.full_messages.each do |message| %>
    <%= message %> <br>
  <% end %>
<% end %>

<%= form_for @duck do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>

  <%= f.label :description %>
  <%= f.text_field :description %> <br>

  <%= f.collection_select :student_id, Student.all, :id, :name %>
  <br>
  <br>
  <%= f.submit %>

<% end %>
